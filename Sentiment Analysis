from textblob import TextBlob

def analyze_sentiment(text):
    blob = TextBlob(text)
    sentiment = blob.sentiment

    # Sentiment includes polarity and subjectivity:
    # Polarity: -1 (negative) to +1 (positive)
    # Subjectivity: 0 (objective) to 1 (subjective)
    print(f"\nğŸ“ Text: {text}")
    print(f"ğŸ” Sentiment Polarity: {sentiment.polarity}")
    print(f"ğŸ§  Subjectivity: {sentiment.subjectivity}")

    if sentiment.polarity > 0:
        print("ğŸ˜Š Sentiment: Positive")
    elif sentiment.polarity < 0:
        print("ğŸ˜  Sentiment: Negative")
    else:
        print("ğŸ˜ Sentiment: Neutral")

# Main program loop
print("ğŸ“Š Sentiment Analysis Tool (Type 'exit' to quit)")

while True:
    user_input = input("\nEnter a text to analyze: ")
    if user_input.lower() == "exit":
        print("Goodbye! ğŸ‘‹")
        break
    analyze_sentiment(user_input)
